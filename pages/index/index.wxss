/**index.wxss**/

.item-goods {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.image-goods-pic {
  width: 30%;
  height: 30vw;
  flex-shrink: 0;
  border-radius: 10rpx;
}

.text-subtitle {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text-price {
  color: red;
}

.text-store {
  font-size: 24rpx;
  color: grey;
}

.right-view {
  padding-left: 10rpx;
  height: 30vw;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
